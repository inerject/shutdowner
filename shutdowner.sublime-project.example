{
  "folders": [
    {
      "path": ".",
      "name": "shutdowner",
      "file_exclude_patterns": [
        "*.sublime-workspace",
      ],
      "folder_exclude_patterns": [
        "build",
        "dist",
        "venv",
        "__pycache__",
      ],
    },
  ],
  "settings": {
    "tab_size": 4,
    "default_line_ending": "unix",

    // Anaconda
    "python_interpreter": "$project_path/venv/Scripts/python",
  },
  "build_systems": [
    {
      "name": "venv Python",
      "shell": true,
      "working_dir": "$project_path",
      "variants": [
        {
          "name": "Build",
          "file_regex": "^[ ]*File \"(...*?)\", line ([0-9]*)",
          "selector": "source.python",
          "cmd": [
            "$project_path/venv/Scripts/python", "-u", "$file"
          ],
        },
        {
          "name": "Patch",
          "cmd": [
            "$project_path/venv/Scripts/python", "-u",
            "$project_path/$project_base_name/version.py",
            "--patch",
            "-g", "$project_path/$project_base_name/app_ver.py",
          ],
        },
        {
          "name": "Minor",
          "cmd": [
            "$project_path/venv/Scripts/python", "-u",
            "$project_path/$project_base_name/version.py",
            "--minor",
            "-g", "$project_path/$project_base_name/app_ver.py",
          ],
        },
        {
          "name": "Major",
          "cmd": [
            "$project_path/venv/Scripts/python", "-u",
            "$project_path/$project_base_name/version.py",
            "--major",
            "-g", "$project_path/$project_base_name/app_ver.py",
          ],
        },
      ],
    },
  ],
}
