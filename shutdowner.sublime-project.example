{
  "folders": [
    {
      "path": ".",
      "name": "shutdowner",
      "file_exclude_patterns": [
        "*.sublime-workspace",
        "*.example",
      ],
      "folder_exclude_patterns": [
        "build",
        "dist",
        "venv",
        "__pycache__",
      ],
    },
  ],
  "settings": {
    "tab_size": 4,
    "default_line_ending": "unix",

    // Anaconda
    "python_interpreter": "$project_path/venv/Scripts/python",
  },
  "build_systems": [{
    "name": "venv Python",
    "shell": true,
    "working_dir": "$project_path",
    "variants": [
      {
        "name": "Build",
        "file_regex": "^[ ]*File \"(...*?)\", line ([0-9]*)",
        "selector": "source.python",
        "cmd": [
          "$project_path/venv/Scripts/python", "-u", "$file",
        ],
      },
      {
        "name": "Patch",
        "cmd": [
          "$project_path/venv/Scripts/python", "-u", "-m", "appver",
          "--patch",
          "--newline", "unix",
          "$project_path/$project_base_name/_version.py",
        ],
      },
      {
        "name": "Minor",
        "cmd": [
          "$project_path/venv/Scripts/python", "-u", "-m", "appver",
          "--minor",
          "--newline", "unix",
          "$project_path/$project_base_name/_version.py",
        ],
      },
      {
        "name": "Major",
        "cmd": [
          "$project_path/venv/Scripts/python", "-u", "-m", "appver",
          "--major",
          "--newline", "unix",
          "$project_path/$project_base_name/_version.py",
        ],
      },
      {
        "name": "Release",
        "cmd": [
          "$project_path/venv/Scripts/python", "-u",
          "$project_path/$project_base_name/build_exe.py",
          "--target", "$project_path/$project_base_name/$project_base_name.py",
          "--app-name", "$project_base_name",
          "--icon", "$project_path/$project_base_name/icons/$project_base_name.ico",
          "--resource-dirs", "$project_path/$project_base_name/icons",
          "--app-guid", "{84CE7496-1B5B-4CE1-A5D2-9C126ACB1CA1}"
        ],
      },
    ],
  }],
}
